pkgname=avarice
pkgver=2.14
pkgrel=7
epoch=
pkgdesc="GDB debug server for AVR microcontrollers"
arch=('x86_64')
url=""
license=('GPL')
groups=()
depends=()
makedepends=()
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
changelog=
source=("$pkgname-$pkgver.tar.gz")
noextract=()
md5sums=('SKIP')
validpgpkeys=()

prepare() {
	cd "$srcdir"
}

build() {
	cd "$srcdir"
	./Bootstrap
	./configure --prefix=/usr
	make all
}

check() {
	cd "$srcdir"
	make -k check
}

package() {
	cd "$srcdir"
	make DESTDIR="$pkgdir/" install
}
